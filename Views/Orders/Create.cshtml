@model BookStore_WebApplication.Models.BookOrderDto

@{
    ViewData["Title"] = "Create";
}

<h4>Створити нове замовлення</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.IdClient" class="control-label"></label>
                <select asp-for="Order.IdClient" class ="form-control" asp-items="ViewBag.IdClient"></select>
            </div>

            <div class="form-group">
                <label asp-for="Order.IdDelivery" class="control-label"></label>
                <select asp-for="Order.IdDelivery" class ="form-control" asp-items="ViewBag.IdDelivery"></select>
            </div>

            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BooksList"></select>
            </div>

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
