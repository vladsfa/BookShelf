@using Microsoft.AspNetCore.Identity
@model BookStore_WebApplication.ViewModels.ChangeRoleViewModel

<h4>Змінити ролі користувача @Model.UserEmail</h4>

<form asp-action="Edit" method="post">

    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach(IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
            @role.Name
            <br />
        }
    </div>

    <button type="submit" class="btn btn-primary">
        Зберегти
    </button>

</form>