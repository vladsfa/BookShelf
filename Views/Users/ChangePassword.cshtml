@model BookStore_WebApplication.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Changing password";
}

<h3>Зміна паролю для @Model.Email</h3>

<form method="post" asp-action="ChangePassword" asp-controller="Users">

    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="OldPasword" class="control-label">Старий пароль</label>
        <input type="text" asp-for="OldPasword" class="form-control" />
    </div>
     
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новий пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-dark" />
    </div>

</form>

<a asp-controller="Roles" asp-action="UserList">Назад</a>